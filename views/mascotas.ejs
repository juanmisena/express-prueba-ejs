<%- include("template/head.ejs", {tituloWeb: 'Pagina Inicio'}); %> 
    <div class="container">
      <h1>Crud Mongo</h1>
      <a
        class="btn btn-success btn-block my-4"
        href="/mascotas/crear"
      >
        Agregar Mascota
      </a>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripci√≥n</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
                <% if (arrayMascotas.length > 0) { %>
                    <% arrayMascotas.forEach(mascota => { %>
                        <tr>
                          <th scope="row"><%= mascota.id %> </th>
                          <td><%= mascota.nombre %></td>
                          <td><%= mascota.desc %></td>
                          <td><a href="mascotas/<%= mascota.id %>" class="btn btn-warning btn-sm">Editar</a></td>
                        </tr>
                      <% }) %>
                <% } %>
            </tbody>
          </table>
    </div>
